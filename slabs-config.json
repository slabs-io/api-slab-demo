{
  "name" : "Page Scraper",
  "description" : "A tool for scraping web pages and pulling the content from them.",
  "type" : "source",
  "connectionsIn" : 1,
  "connectionsOut" : -1,
  "customIcon" : "fa-file-text-o",
  "schema" : {
    "type": "object",
    "properties" : {
      "siteUrl": {
        "type": "string",
        "minLength" : 8,
        "pattern": "^(http[s]?:\/\/)(www\\.){0,1}[a-zA-Z0-9\\.\\-]+\\.[a-zA-Z]{2,5}[\\.]{0,1}",
        "validationMessage" : "This doesn't look like a proper URL ...",
        "default": "http://www.slabs.io",
        "title": "Site Url",
        "brief": "URL"
      },
      "cssSelector": {
        "type": "string",
        "default": "h1",
        "title": "CSS Selector to your content",
        "brief": "Selector"
      }
    }
  },
  "source": {
    "label": "Core Slab",
    "url": "http://slabs.io/"
  }
}
